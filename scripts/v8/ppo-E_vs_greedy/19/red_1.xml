<!--scripts/v8/policy/ppo-E.xml-->
<Parallel>
    <RandomInitWaypointNearGameCenter/>
    <Parallel>
        <Sequence>
            <IsChanged value="{{agent.missile_hit_enemy_count}}"/>
            <Reward reward="1" scope="attack"/>
        </Sequence>
        <Sequence>
            <IsChanged value="{{agent.missile_evade_success_count}}"/>
            <Reward reward="{{1}}" scope="evade"/>
        </Sequence>
        <Sequence>
            <IsChanged value="{{agent.missile_miss_count}}"/>
            <Reward reward="-0.1" scope="attack"/>
        </Sequence>
        <Sequence>
            <IsWin/>
            <Reward reward="{{50 + 50 * math.exp(-time / 600)}}" scope="default"/>
        </Sequence>
        <Sequence>
            <IsLose/>
            <Reward reward="{{-10 - 10 * math.exp(-time / 600)}}" scope="default"/>
        </Sequence>
    </Parallel>
    <ReactiveSequence>
        <CanFireMissile/>
        <IsNearestEnemyInHitRange/>
        <FireMissileAtNearestEnemy/>
    </ReactiveSequence>
    <ReactiveSelector>
        <ReactiveSequence>
            <Inverter>
                <IsInSafeArea/>
            </Inverter>
            <GoToSafeArea/>
        </ReactiveSequence>
        <V8PPOGoToLocation1V1 reward_scope="control,default,attack,evade" path="scripts/v8/ppo-E_vs_greedy/models/V8PPOGoToLocation1V1__" tensorboard_log="{{output_run_id}}/{{name}}/{{agent_name}}" log_interval="1" verbose="0" train="{{train}}"/>
    </ReactiveSelector>
</Parallel>
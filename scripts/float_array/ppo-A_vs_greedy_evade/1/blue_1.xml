<!--scripts/float_array/policy/greedy_evade.xml-->
<Parallel>
    <RandomInitWaypointNearGameCenter/>
    <Parallel>
        <OneShot>
            <Sequence>
                <IsWin/>
                <Reward reward="{{50 + 50 * math.exp(-time / 600)}}" domain="default"/>
            </Sequence>
        </OneShot>
        <OneShot>
            <Sequence>
                <IsLose/>
                <Reward reward="{{-10 - 10 * math.exp(-time / 600)}}" domain="default"/>
            </Sequence>
        </OneShot>
    </Parallel>
    <ReactiveSequence>
        <CanFireMissile/>
        <IsNearestEnemyInHitRange/>
        <FireMissileAtNearestEnemy/>
    </ReactiveSequence>
    <ReactiveSelector>
        <ReactiveSequence>
            <Inverter>
                <IsInSafeArea/>
            </Inverter>
            <GoToSafeArea/>
        </ReactiveSequence>
        <ReactiveSelector>
            <ReactiveSequence>
                <IsMissileThreatDetected/>
                <Manoeuvre39ToEvadeMissile/>
            </ReactiveSequence>
            <PurePursueNearestEnemy/>
        </ReactiveSelector>
    </ReactiveSelector>
</Parallel>
<Root name="V4Greedy">
    <RandomInitWaypointNearGameCenter/>
    <include path="v7/policy/reward.xml"/>

    <ReactiveSequence>
        <CanFireMissile/>
        <IsNearestEnemyInHitRange/>
        <FireMissileAtNearestEnemy/>
    </ReactiveSequence>

    <ReactiveSelector>
        <include path="v7/policy/handle_abnormal.xml"/>
        
        <ReactiveSequence>
            <IsMissileThreatDetected/>
            <EvadeMissile/>
        </ReactiveSequence>

        <ReactiveSequence>
            <IsInSafeArea/>
            <IsEnemyDetected/>
            <!--            <AutoPursueNearestEnemy/>-->
            <!--PursueNearestEnemy会更智能一些，会往优势更高的敌方飞-->
            <PursueNearestEnemy attack_ratio="0.5" evade_ratio="0.5" test_move_angle_sep="10"/>
        </ReactiveSequence>
    </ReactiveSelector>
</Root>

<Root name="V6Reward">
    <Sequence>
        <IsChanged value="{{agent.missile_miss_count}}"/>
        <!--导弹打空了-->
        <Reward reward="-0.1" scope="attack"/>
    </Sequence>

    <Sequence>
        <IsChanged value="{{agent.missile_hit_enemy_count}}"/>
        <!--导弹打中了对方-->
        <Reward reward="1" scope="attack"/>
    </Sequence>

    <Sequence>
        <IsChanged value="{{agent.missile_evade_success_count}}"/>
        <!--成功规避导弹，给出奖励-->
        <Reward reward="0.2" scope="control"/>
    </Sequence>

    <Sequence>
        <IsChanged value="{{agent.missile_hit_self_count}}"/>
        <!--被导弹打中，给出惩罚-->
        <Reward reward="-0.5" scope="control"/>
    </Sequence>

    <Sequence>
        <IsChanged value="{{agent.aircraft_collided_count}}"/>
        <!--与飞机相撞，给出惩罚-->
        <Reward reward="-0.8" scope="control"/>
    </Sequence>

    <Sequence>
        <IsChanged value="{{agent.missile_fire_fail_count}}"/>
        <!--导弹发射失败，给出惩罚-->
        <Reward reward="-0.03" scope="attack"/>
    </Sequence>

    <Sequence>
        <!--胜利奖励-->
        <IsWin/>
        <Reward reward="1" scope="control"/>
    </Sequence>

    <!--    <Sequence>-->
    <!--        &lt;!&ndash;时间惩罚&ndash;&gt;-->
    <!--        <TimeElapsed duration="60" time="{{time}}"/>-->
    <!--        <PrintNodeData>-->
    <!--            <Reward reward="-0.001 * {{time}}" scope="completion"/>-->
    <!--        </PrintNodeData>-->
    <!--    </Sequence>-->

    <Sequence>
        <!--时间惩罚-->
        <TimeElapsed duration="1" time="{{time}}"/>
        <Reward reward="-0.001" scope="control,attack"/>
    </Sequence>

</Root>

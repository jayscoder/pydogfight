<Root name="V4RL">
    <RandomInitWaypointNearGameCenter/>
    <include path="v6/policy/reward.xml"/>

    <ReactiveSelector>
        <ReactiveSequence>
            <Inverter>
                <IsInSafeArea/>
            </Inverter>
            <GoToSafeArea/>
        </ReactiveSequence>

        <ReactiveSequence>
            <IsInSafeArea/>
            <Inverter>
                <IsEnemyDetected/>
            </Inverter>
            <Inverter>
                <IsMissileThreatDetected/>
            </Inverter>
            <CheatGoToNearestEnemyWithMemory/>
        </ReactiveSequence>

        <CustomRLFireAndGoToLocation
                algo="{{rl_algo}}"
                reward_scope="control"
                path="{{models_dir}}/models/{{models_episode}}/{{agent_name}}/CustomRLFireAndGoToLocation"
                save_path="{{output}}/models/{{episode}}/{{agent_name}}/CustomRLFireAndGoToLocation"
                tensorboard_log="{{output}}/{{runtime}}/{{agent_name}}/CustomRLFireAndGoToLocation"
                log_interval="1"
                save_interval="10"
                verbose="1"
                train="{{train}}"
        />
    </ReactiveSelector>
</Root>

<Sequence>
    <Parallel>
        <!--        <AttackNearestEnemy/>-->
        <ReactiveSequence>
            <PPOCondition
                    path="models/ppo_v1/{{agent_color}}/PPOCondition_attack"
                    tensorboard_log="logs/ppo_v1/PPOCondition_attack"
            />
            <AttackNearestEnemy/>
        </ReactiveSequence>
        <PPOSwitcher
                path="models/ppo_v1/{{agent_color}}/PPOSwitcher_1"
                tensorboard_log="logs/ppo_v1/PPOSwitcher_1">
            <ReactiveSequence>
                <MissileThreatDetected/>
                <EvadeMissile/>
            </ReactiveSequence>

            <ReactiveSequence>
                <Selector>
                    <IsMissileDepleted/>
                    <IsFuelBingo/>
                </Selector>
                <GoHome/>
            </ReactiveSequence>

            <ReactiveSequence>
                <Inverter>
                    <IsInSafeArea/>
                </Inverter>
                <GoToCenter/>
            </ReactiveSequence>

            <ReactiveSequence>
                <EnemyDetected/>
                <GoToNearestEnemy />
            </ReactiveSequence>

            <ReactiveSequence>
                <EnemyDetected/>
                <PursueNearestEnemy attack_ratio="1" />
            </ReactiveSequence>

            <ReactiveSequence>
                <IsInSafeArea/>
                <Inverter>
                    <EnemyDetected/>
                </Inverter>
                <Explore/>
            </ReactiveSequence>
        </PPOSwitcher>
    </Parallel>
</Sequence>

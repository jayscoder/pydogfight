<Sequence>
    <InitGreedyPolicy memory_gap="1000"/>
    <Parallel>
        <!--        <AttackNearestEnemy/>-->
        <ReactiveSequence>
            <PPOCondition
                    path="models/ppo_v1_reactive/{{agent_color}}/PPOCondition_attack/{{version}}"
                    tensorboard_log="logs/ppo_v1_reactive/PPOCondition_attack/{{version}}"
            />
            <AttackNearestEnemy/>
        </ReactiveSequence>
        
        <ReactivePPOSwitcher
                path="models/ppo_v1_reactive/{{agent_color}}/PPOSwitcher_1/{{version}}"
                tensorboard_log="logs/ppo_v1_reactive/PPOSwitcher_1/{{version}}">
            <ReactiveSequence>
                <MissileThreatDetected/>
                <EvadeMissile/>
            </ReactiveSequence>

            <ReactiveSequence>
                <Selector>
                    <IsMissileDepleted/>
                    <IsFuelBingo/>
                </Selector>
                <GoHome/>
            </ReactiveSequence>

            <ReactiveSequence>
                <Inverter>
                    <IsInSafeArea/>
                </Inverter>
                <GoToCenter/>
            </ReactiveSequence>

            <ReactiveSequence>
                <EnemyDetected/>
                <GoToNearestEnemy/>
            </ReactiveSequence>

            <ReactiveSequence>
                <EnemyDetected/>
                <PursueNearestEnemy attack_ratio="1"/>
            </ReactiveSequence>

            <ReactiveSequence>
                <IsInSafeArea/>
                <Inverter>
                    <EnemyDetected/>
                </Inverter>
                <Explore/>
            </ReactiveSequence>
        </ReactivePPOSwitcher>
    </Parallel>
</Sequence>
